def myfunc() {
 print "Boom you are inside a function"
}
pipeline {
    agent any
    stages {
        stage("Stage 1") {
            steps {
                script {
                   for (i=1;i<10;i++) {
                   println "printing var1 values ${i}"
                   myfunc()
                   }
                        }
                        }
                        }
                        }
                        }
